<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="np.edu.bvs.bvshigh">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/bvs_logo_small"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <service
            android:name=".firebase_notification.FirebaseMessagingService"
            android:permission="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".firebase_notification.FirebaseInstanceIDService"
            android:permission="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <activity
            android:name=".Select_Category"
            android:hardwareAccelerated="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".login_sharedPref.Login_Student" />

        <activity android:name=".login_sharedPref.Register_Student" />

        <activity
            android:name=".Main_activity"
            android:hardwareAccelerated="false"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".login_sharedPref.Student_Profile_Edit"
            android:parentActivityName=".login_sharedPref.Student_Profile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="np.edu.bvs.bvshigh.login_sharedPref.Student_Profile" />
        </activity>

        <activity
            android:name=".login_sharedPref.Student_Profile"
            android:parentActivityName=".Main_activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="np.edu.bvs.bvshigh.Main_activity" />
        </activity>

        <activity
            android:name=".routine_bvs.fragment_routine"
            android:label="@string/routine_big"
            android:parentActivityName=".Main_activity">
        </activity>

        <activity
            android:name=".fragment_calendar"
            android:parentActivityName=".Main_activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="np.edu.bvs.bvshigh.Main_activity" />
        </activity>

        <activity
            android:name=".fragment_result"
            android:hardwareAccelerated="true"
            android:label="RESULT"
            android:parentActivityName=".Main_activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="np.edu.bvs.bvshigh.Main_activity" />
        </activity>

        <activity
            android:name=".contact_us"
            android:parentActivityName=".Main_activity">
        </activity>

        <activity
            android:name=".about_college"
            android:parentActivityName=".Main_activity">
        </activity>

        <activity
            android:name=".fragment_alerts"
            android:label="@string/alerts"
            android:parentActivityName=".Main_activity">
        </activity>
        
        <activity
            android:name=".feedback"
            android:label="Feedback"
            android:parentActivityName=".Main_activity">
        </activity>

        <activity
            android:name=".message_to_school"
            android:parentActivityName=".Main_activity"
            android:label="@string/message">
        </activity>

    </application>
</manifest>