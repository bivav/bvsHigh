<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="np.edu.bvs.bvshigh">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/bvs_logo_small"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <service
            android:name=".firebase_notification.FirebaseMessagingService"
            android:permission="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".firebase_notification.FirebaseInstanceIDService"
            android:permission="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".firebase_notification.FirebaseNotificationListener"
            android:label="@string/service_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <activity
            android:name=".general.Select_Category"
            android:hardwareAccelerated="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".login_sharedPref.Login_Student" />


        <activity android:name=".login_sharedPref.Register_Student" />


        <activity
            android:name=".general.Main_Activity"
            android:hardwareAccelerated="false"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>


        <activity
            android:name=".students.Student_Profile_Edit"
            android:parentActivityName=".students.Student_Profile">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="np.edu.bvs.bvshigh.students.Student_Profile" />
        </activity>

        <activity
            android:name=".students.Student_Profile"
            android:parentActivityName=".general.Main_Activity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="np.edu.bvs.bvshigh.general.Main_Activity" />
        </activity>


        <activity
            android:name=".routine_bvs_students.fragment_routine"
            android:label="@string/routine_big"
            android:parentActivityName=".general.Main_Activity">
        </activity>

        <activity
            android:parentActivityName=".general.Main_Activity"
            android:label="@string/homework"
            android:hardwareAccelerated="true"
            android:name=".teachers.fragment_assignment">
        </activity>


        <activity
            android:name=".general.fragment_calendar"
            android:parentActivityName=".general.Main_Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="np.edu.bvs.bvshigh.general.Main_Activity" />
        </activity>

        <activity
            android:name=".students.fragment_result_student"
            android:hardwareAccelerated="true"
            android:label="RESULT"
            android:parentActivityName=".general.Main_Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="np.edu.bvs.bvshigh.general.Main_Activity" />
        </activity>

        <activity
            android:name=".general.Contact_Us"
            android:parentActivityName=".general.Main_Activity">
        </activity>

        <activity
            android:name=".general.about_college"
            android:parentActivityName=".general.Main_Activity">
        </activity>

        <activity
            android:name=".general.fragment_alerts"
            android:label="@string/alerts"
            android:parentActivityName=".general.Main_Activity">
        </activity>

        <activity
            android:name=".general.Feedback"
            android:label="Feedback"
            android:parentActivityName=".general.Main_Activity">
        </activity>

        <activity
            android:name=".general.message_to_school"
            android:parentActivityName=".general.Main_Activity"
            android:label="@string/message">
        </activity>

        <activity android:name=".students.Dashboard"
            android:hardwareAccelerated="true" />


    </application>
</manifest>