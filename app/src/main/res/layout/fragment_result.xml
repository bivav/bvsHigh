
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:weightSum="2"
    tools:context="np.edu.bvs.bvshigh.fragment_result">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/above"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        card_view:contentPaddingTop="10dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="MONTHLY TESTS RESULTS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/monthly_test"
                android:layout_margin="5dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <View
                android:layout_width="fill_parent"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/line"
                android:layout_height="1dp"
                android:layout_below="@+id/monthly_test"
                android:background="#c0c0c0"/>

            <ListView
                android:layout_below="@+id/line"
                android:layout_marginTop="10dp"
                android:id="@+id/monthly_test_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/below"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        card_view:contentPaddingTop="10dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="MAIN EXAM RESULT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/test_results"
                android:layout_margin="5dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <View
                android:layout_width="fill_parent"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/line2"
                android:layout_height="1dp"
                android:layout_below="@+id/test_results"
                android:background="#c0c0c0"/>

            <ListView
                android:layout_below="@+id/line2"
                android:layout_marginTop="5dp"
                android:id="@+id/main_exam_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>