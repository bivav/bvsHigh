                    android:textSize="15sp" />

                <TextView
                    android:text="SB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="10dp"
                    android:id="@+id/textView3"
                    android:textSize="15sp" />
            </TableRow>

        </TableLayout>
    </LinearLayout>
</LinearLayout>