<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        card_view:contentPadding="5dp"
        android:layout_height="match_parent"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="5dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Bivav Raj Satyal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:layout_gravity="center_horizontal"
                android:layout_alignTop="@+id/profile_pic"
                android:layout_toRightOf="@+id/profile_pic"
                android:layout_toEndOf="@+id/profile_pic"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />

            <TextView
                android:text="Grade 11   Sec: I"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/grade_sec"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/name"
                android:layout_alignLeft="@+id/name"
                android:layout_alignStart="@+id/name"
                android:layout_marginTop="5dp"
                android:textSize="16sp" />

            <TextView
                android:text="Branch: Science"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/branch"
                android:layout_below="@id/grade_sec"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@+id/grade_sec"
                android:layout_alignStart="@+id/grade_sec"
                android:textSize="16sp" />

            <TextView
                android:text="Admission No: BVS143"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/admission_no"
                android:layout_below="@id/branch"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@+id/grade_sec"
                android:layout_alignStart="@+id/grade_sec"
                android:textSize="16sp" />


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:src="@drawable/bivav_raj"
                app:border_color="#FF0000"
                android:layout_width="120dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/bivav_raj"
                android:id="@+id/profile_pic"
                tools:ignore="ContentDescription"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="33dp"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="View Profile"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/admission_no"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/grade_sec"
                android:layout_alignStart="@+id/grade_sec"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>