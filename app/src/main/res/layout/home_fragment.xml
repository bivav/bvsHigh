<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="5dp"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/user_pic"
        android:layout_toRightOf="@+id/user_pic"
        android:layout_toEndOf="@+id/user_pic"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:fontFamily="sans-serif" />

    <TextView
        android:text="@string/grade_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grade_sec"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="5dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:textSize="16sp" />

    <TextView
        android:text="@string/sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/grade"
        android:layout_toEndOf="@+id/grade"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:id="@+id/sec_name"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:textSize="16sp" />

    <TextView
        android:text="@string/branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grade_sec"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:id="@+id/branch"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@+id/grade_sec"
        android:layout_alignStart="@+id/grade_sec"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:textSize="16sp" />

    <TextView
        android:text="@string/id_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admission"
        android:layout_below="@id/branch"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@+id/grade_sec"
        android:layout_alignStart="@+id/grade_sec"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:textSize="16sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_pic"
        android:src="@drawable/image"
        android:layout_width="110dp"
        android:layout_marginTop="20dp"
        android:layout_height="120dp" />

    <Button
        android:text="@string/view_profile"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/admission"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/grade_sec"
        android:layout_alignStart="@+id/grade_sec"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/navViewColor"
        android:id="@+id/view_profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grade"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/grade_sec"
        android:layout_alignBottom="@+id/grade_sec"
        android:layout_toEndOf="@+id/grade_sec"
        android:layout_toRightOf="@+id/grade_sec"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/primary_text_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sec"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/grade_sec"
        android:layout_alignBottom="@+id/grade_sec"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@+id/sec_name"
        android:layout_toEndOf="@+id/sec_name"
        android:textColor="@android:color/primary_text_light" />

    <TextView
        android:text="123456789"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_no"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/admission"
        android:layout_alignBottom="@+id/admission"
        android:layout_toRightOf="@+id/grade_sec"
        android:layout_toEndOf="@+id/grade_sec"
        android:textColor="@android:color/primary_text_light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/branch_name"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignBaseline="@+id/branch"
        android:layout_alignBottom="@+id/branch"
        android:layout_toRightOf="@+id/branch"
        android:layout_toEndOf="@+id/branch"
        android:textColor="@android:color/primary_text_light" />

</RelativeLayout>